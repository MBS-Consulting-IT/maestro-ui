{
  "name": "maestro-ui",
  "description": "UI Component library for Orquestra BPMS",
  "version": "0.5.0",
  "main": "dist/maestro-ui.esm.js",
  "module": "dist/maestro-ui.esm.js",
  "browser": "dist/maestro-ui.js",
  "license": "LGPL-3.0",
  "author": "Pedro Bernardo <pedrovbernardo@gmail.com>",
  "scripts": {
    "play": "parcel playground/index.html --port 1234 --dist-dir output --open",
    "dev": "rollup -c -w",
    "prebuild": "rimraf dist",
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "sass src/styles/main.scss dist/maestro-ui.css && sass src/styles/main.scss dist/maestro-ui.min.css --style compressed",
    "test": "jest ./src",
    "lint": "eslint ./src"
  },
  "keywords": [
    "orquestra",
    "zeev",
    "bpm",
    "bpms",
    "component",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedbernardo/maestro-ui.git"
  },
  "bugs": {
    "url": "https://github.com/pedbernardo/maestro-ui/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@parcel/transformer-sass": "^2.0.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@types/jest": "^27.0.3",
    "chance": "^1.1.8",
    "eslint": "7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "jest": "^27.3.1",
    "parcel": "^2.0.1",
    "posthtml": "^0.16.5",
    "posthtml-expressions": "^1.9.0",
    "posthtml-extend": "^0.6.1",
    "posthtml-include": "^1.7.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "sass": "^1.47.0"
  }
}
